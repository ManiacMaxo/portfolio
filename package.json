{
  "name": "portfolio",
  "author": "Victor Gorchilov <victor@gorchilov.com>",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "build": "yarn build:sanity && pwd && yarn build:web",
    "build:sanity": "cd studio && sanity build ../public/studio -y && cd ..",
    "build:web": "next build",
    "create:component": "node ./helper_scripts/commands/create_component.js",
    "create:page": "node ./helper_scripts/commands/create_page.js",
    "dev": "next",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "start:sanity": "cp .env ./studio/.env.development && cd studio && sanity start",
    "start:web": "next start",
    "type-check": "tsc --pretty --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/client": "^2.10.5",
    "framer-motion": "^4.1.17",
    "next": "^10.2.3",
    "next-offline": "^5.0.5",
    "next-pwa": "^5.2.21",
    "next-sanity": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@sanity/cli": "^2.10.5",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.23.2",
    "handlebars": "^4.7.7",
    "husky": "^6.0.0",
    "inquirer": "^8.1.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "sass": "^1.34.0",
    "typescript": "^4.2.4"
  }
}
